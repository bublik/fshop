%h2 Contact Us
%section.container
  .row
    .col-md-15
      = simple_form_for @question, url: contact_us_path, html: {role: 'form', class: 'contact_us', method: :post} do |f|
        - if @question.errors.present?
          .alert.alert-danger= @question.errors.full_messages.join(', ')
        .row
          .col-md-15
            %label.sr-only Name
            = f.input_field :username, label: false, placeholder: 'Your name'
          .col-md-15
            %label.sr-only Email aditem
            = f.input_field :email, label: false, placeholder: 'Enter email'
        .row
          .col-md-30
            = f.text_area :message, label: false, placeholder: 'Ask are question', rows: '3', class: 'form-control'
        = f.submit 'Send', class: 'btn btn-success'
